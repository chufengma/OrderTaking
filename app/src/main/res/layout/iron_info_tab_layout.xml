<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="5dip"
        android:id="@+id/layout"
        android:background="@drawable/seller_tab_bg"
        android:elevation="5dip"
        android:orientation="vertical"
        android:padding="5dip"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="山东澳新"
                android:id="@+id/proPlace"
                android:textSize="10dip"
                android:paddingTop="1dip"
                android:paddingBottom="1dip"
                android:paddingLeft="2dip"
                android:paddingRight="2dip"
                android:textColor="@color/main_blue"
                android:background="@drawable/icon_info_item_proplace_bg"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="进行中"
                android:textSize="12dip"
                android:id="@+id/buyerStatus"
                android:textColor="@color/main_green"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:text="不锈钢板 S22053 No.1"
            android:id="@+id/baseInfo"
            android:textSize="10dip"
            android:paddingTop="1dip"
            android:paddingBottom="1dip"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"
            android:textColor="#333333"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="18*12*24"
            android:id="@+id/spec"
            android:textSize="10dip"
            android:paddingTop="1dip"
            android:paddingBottom="1dip"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"
            android:textColor="#333333"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="2 T"
            android:id="@+id/weight"
            android:textSize="10dip"
            android:paddingTop="1dip"
            android:paddingBottom="1dip"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"
            android:textColor="#333333"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="10dip"
                android:src="@drawable/iron_info_time"
                android:layout_marginRight="2dip"
                android:layout_height="10dip" />

            <TextView
                android:layout_width="wrap_content"
                android:text="2017-12-12"
                android:id="@+id/updateTime"
                android:textSize="10dip"
                android:paddingTop="1dip"
                android:paddingBottom="1dip"
                android:paddingLeft="2dip"
                android:layout_weight="1"
                android:paddingRight="2dip"
                android:textColor="#999999"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="20"
                android:textSize="12dip"
                android:id="@+id/num"
                android:textColor="@color/main_blue"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="个报价"
                android:textSize="12dip"
                android:textColor="#333333"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>