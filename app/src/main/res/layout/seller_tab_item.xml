<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="8dip"
    android:paddingBottom="8dip"
    android:gravity="center_vertical"
    android:baselineAligned="false"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="30dip"
        android:id="@+id/seller_top"
        android:src="@drawable/ic_seller_one"
        android:scaleType="fitCenter"
        android:layout_height="30dip" />

    <TextView
        android:layout_width="30dip"
        android:id="@+id/seller_top_text"
        android:textSize="16dip"
        android:text="3"
        android:gravity="center"
        android:visibility="gone"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="5dip"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:text="江苏淘不锈电子商务有限公司"
            android:textSize="15dip"
            android:id="@+id/company_name"
            android:textColor="#ff333333"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/level_icons"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="活跃指数"
            android:textSize="13dip"
            android:textColor="#999999"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/level_num_bg"
            android:text="78"
            android:gravity="center"
            android:id="@+id/level_num"
            android:textSize="12dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>