<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    tools:context="ordertaking.itaobuxiu.com.ordertaking.ui.NewRequestActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_height="55dip">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="55dip"
            android:padding="15dip"
            android:src="@drawable/ic_back_arrow"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="55dip"
            android:clickable="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"
            android:text="新增求购"
            android:layout_weight="1"
            android:textSize="18dip" />

        <ImageView
            android:id="@+id/right"
            android:padding="15dip"
            android:visibility="invisible"
            android:src="?android:attr/actionModeShareDrawable"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="16dip"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="14dip"
                    android:id="@+id/cityLayout"
                    android:layout_height="wrap_content">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="货源地"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/city"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="15dip"
                        android:src="@drawable/ic_item_arrow"
                        android:layout_height="15dip" />

                </LinearLayout>

                <View
                    android:layout_marginLeft="16dip"
                    android:layout_width="match_parent"
                    android:background="#ddd"
                    android:layout_height="1dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="14dip"
                    android:id="@+id/nameLayout"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="品名"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/name"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="15dip"
                        android:src="@drawable/ic_item_arrow"
                        android:layout_height="15dip" />

                </LinearLayout>

                <View
                    android:layout_marginLeft="16dip"
                    android:layout_width="match_parent"
                    android:background="#ddd"
                    android:layout_height="1dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="14dip"
                    android:id="@+id/materialLayout"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="材质"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/material"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="15dip"
                        android:src="@drawable/ic_item_arrow"
                        android:layout_height="15dip" />

                </LinearLayout>

                <View
                    android:layout_marginLeft="16dip"
                    android:layout_width="match_parent"
                    android:background="#ddd"
                    android:layout_height="1dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="14dip"
                    android:id="@+id/surfaceLayout"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="表面"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/surface"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="15dip"
                        android:src="@drawable/ic_item_arrow"
                        android:layout_height="15dip" />

                </LinearLayout>

                <View
                    android:layout_marginLeft="16dip"
                    android:layout_width="match_parent"
                    android:background="#ddd"
                    android:layout_height="1dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="14dip"
                    android:id="@+id/specLayout"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="规格"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/spec"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="15dip"
                        android:src="@drawable/ic_item_arrow"
                        android:layout_height="15dip" />

                </LinearLayout>

                <View
                    android:layout_marginLeft="16dip"
                    android:layout_width="match_parent"
                    android:background="#ddd"
                    android:layout_height="1dip" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="14dip"
                    android:id="@+id/timeLayout"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="时间"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:hint="24小时"
                        android:textColorHint="#999"
                        android:id="@+id/time"
                        android:background="@null"
                        android:enabled="false"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_marginLeft="16dip"
                    android:layout_width="match_parent"
                    android:background="#ddd"
                    android:layout_height="1dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="14dip"
                    android:id="@+id/toLayout"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="公差"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:hint="非板卷类不可填写"
                        android:textColorHint="#999"
                        android:id="@+id/to"
                        android:background="@null"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dip"
                android:layout_width="match_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="14dip"
                    android:id="@+id/numLayout"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="数量"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:textColorHint="#999"
                        android:id="@+id/num"
                        android:hint="填写数量"
                        android:background="@null"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:inputType="number"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/numUnit"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_marginLeft="20dip"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_marginLeft="16dip"
                    android:layout_width="match_parent"
                    android:background="#ddd"
                    android:layout_height="1dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="14dip"
                    android:id="@+id/weightLayout"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="重量"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:textColorHint="#999"
                        android:id="@+id/weight"
                        android:hint="填写重量"
                        android:background="@null"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:inputType="number"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/weightUnit"
                        android:textColor="#333"
                        android:textSize="16dip"
                        android:layout_marginLeft="20dip"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:gravity="right"
                android:textColor="#999999"
                android:padding="5dip"
                android:text="数量和重量，至少选择其中一项"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:padding="14dip"
                android:background="#fff"
                android:layout_marginTop="10dip"
                android:id="@+id/proPlaceLayout"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="产地"
                    android:textColor="#333"
                    android:textSize="16dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/proPlace"
                    android:textColor="#333"
                    android:textSize="16dip"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="15dip"
                    android:src="@drawable/ic_item_arrow"
                    android:layout_height="15dip" />

            </LinearLayout>

            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:background="#fff"
                android:textColor="#333"
                android:layout_marginTop="16dip"
                android:hint="备注（最多35字）"
                android:padding="10dip"
                android:gravity="left|top"
                android:layout_marginBottom="40dip"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="10dip"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="保存"
            android:background="@drawable/post_normal_bg"
            android:layout_weight="1"
            android:id="@+id/save"
            android:layout_margin="10dip"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:clickable="true"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="快速发布"
            android:background="@drawable/post_selected_bg"
            android:layout_weight="1"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:textColor="#fff"
            android:id="@+id/justPost"
            android:gravity="center"
            android:clickable="true"
            android:layout_margin="10dip"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
