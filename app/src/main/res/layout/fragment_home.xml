<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left"
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:padding="15dip" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="主页"
            android:textColor="#000"
            android:textSize="18dip" />

        <RelativeLayout
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height">

            <ImageView
                android:id="@+id/msg"
                android:layout_width="@dimen/title_height"
                android:layout_height="@dimen/title_height"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:padding="15dip"
                android:src="@drawable/ic_home_msg" />

            <View
                android:id="@+id/msg_red_dot"
                android:layout_width="8dip"
                android:layout_height="8dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dip"
                android:layout_marginTop="14dip"
                android:background="@drawable/ic_red_dot_1" />

        </RelativeLayout>

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="200dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:gravity="center"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip">

                    <LinearLayout
                        android:id="@+id/post"
                        android:layout_width="wrap_content"
                        android:layout_height="100dip"
                        android:layout_margin="20dip"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            android:src="@drawable/ic_post_iron_request" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发布求购"
                            android:textColor="#333" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/offer"
                        android:layout_width="wrap_content"
                        android:layout_height="100dip"
                        android:layout_margin="20dip"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            android:src="@drawable/ic_offer_now" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="马上报价"
                            android:textColor="#333" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/qu"
                        android:layout_width="wrap_content"
                        android:layout_height="100dip"
                        android:layout_margin="20dip"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            android:src="@drawable/ic_qu_help" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="质检助手"
                            android:textColor="#333" />

                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dip"
                        android:layout_marginLeft="8dip"
                        android:layout_marginRight="8dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/price_bg"
                        android:elevation="6dip"
                        android:orientation="vertical"
                        android:paddingBottom="5dip">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dip"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dip"
                            android:paddingRight="15dip">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="LME镍价格走势"
                                android:textColor="#fff"
                                android:textSize="18dip" />

                            <TextView
                                android:id="@+id/todayPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="10dip"
                                android:text="今日"
                                android:textColor="@color/price_grid_color" />

                            <TextView
                                android:id="@+id/monthPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="10dip"
                                android:text="近三个月"
                                android:textColor="@color/price_grid_color" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#f1f8f8f8" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart"
                            android:layout_width="match_parent"
                            android:layout_height="200dip"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dip"
                            android:visibility="gone" />


                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chartMonth"
                            android:layout_width="match_parent"
                            android:layout_height="200dip"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dip" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/priceLoading"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_centerInParent="true"
                        android:elevation="6dip"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="商家排行榜"
                        android:textColor="#333333"
                        android:textSize="16dip" />

                    <TextView
                        android:id="@+id/daySellers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="昨日"
                        android:textColor="@color/seller_grid_color" />

                    <TextView
                        android:id="@+id/allSellers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="所有"
                        android:textColor="@color/seller_grid_color" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sellerRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日市价"
                        android:textColor="#333333"
                        android:textSize="16dip" />

                    <TextView
                        android:id="@+id/marketPriceUpdateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:padding="10dip"
                        android:text="最后更新于2017-12-30 12：23"
                        android:textSize="10dip" />

                    <TextView
                        android:id="@+id/allMarketPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="查看全部"
                        android:textColor="#666666" />

                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/marketPriceRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最新求购"
                        android:textColor="#333333"
                        android:textSize="16dip" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ironInfoRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>