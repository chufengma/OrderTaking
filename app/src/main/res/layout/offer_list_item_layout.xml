<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dip"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dip"
        android:background="#fff"
        android:gravity="center_vertical"
        android:id="@+id/comLayout"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/companyName"
            android:text="asdfasdfasdfasdfasdfasdf"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/baoBig"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_marginLeft="5dip"
            android:src="@drawable/ic_bao" />

        <ImageView
            android:id="@+id/chengBig"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_marginLeft="3dip"
            android:src="@drawable/ic_cheng" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/offerTime"
            android:layout_weight="1"
            android:text="12: 12"
            android:gravity="right"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:background="#ddd"
            android:layout_marginLeft="10dip"
            android:layout_height="1dip" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/validLayout"
        android:background="#fff"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:baselineAligned="false"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dip"
                android:paddingTop="10dip"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceTitle"
                    android:text="单价:"
                    android:textColor="@color/iron_buy_color" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="￥123123"
                    android:textSize="18dip"
                    android:textColor="@color/iron_buy_red_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:id="@+id/unit"
                    android:text="元/吨"
                    android:textColor="@color/iron_buy_red_color" />

                <ImageView
                    android:layout_width="30dip"
                    android:id="@+id/offerNew"
                    android:src="@drawable/ic_offer_new"
                    android:layout_marginLeft="5dip"
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dip" />

                <View
                    android:layout_width="0dip"
                    android:id="@+id/priceHolder"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:id="@+id/historyOffers"
                    android:text="历史报价"
                    android:layout_marginRight="10dip"
                    android:paddingLeft="3dip"
                    android:paddingRight="3dip"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/icon_info_item_proplace_bg"
                    android:textColor="@color/iron_buy_blue_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dip"
                android:paddingTop="5dip"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/toTitle"
                    android:text="公差:"
                    android:textColor="@color/iron_buy_color" />

                <TextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="2.12-123"
                    android:textColor="@color/iron_buy_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dip"
                android:paddingTop="5dip"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/proPlaceTitle"
                    android:text="产地:"
                    android:textColor="@color/iron_buy_color" />

                <TextView
                    android:id="@+id/proPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="123123"
                    android:textColor="@color/iron_buy_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dip"
                android:paddingTop="5dip"
                android:layout_marginBottom="15dip"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/remarkTitle"
                    android:text="备注:"
                    android:textColor="@color/iron_buy_color" />

                <TextView
                    android:id="@+id/remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="2.12-123"
                    android:textColor="@color/iron_buy_color" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="80dip"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginRight="20dip"
            android:id="@+id/successFlag"
            android:src="@drawable/ic_offer_success"
            android:layout_height="80dip" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:text="无货或无计划"
        android:padding="10dip"
        android:visibility="gone"
        android:id="@+id/missText"
        android:background="#fff"
        android:textColor="@color/iron_buy_red_color"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:background="#ddd"
        android:id="@+id/actionLine"
        android:layout_height="1dip" />

    <LinearLayout
        android:id="@+id/actionLayout"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="35dip">

        <TextView
            android:layout_width="0dip"
            android:text="联系商家"
            android:textColor="@color/main_blue"
            android:textSize="16dip"
            android:layout_weight="1"
            android:id="@+id/contactSell"
            android:gravity="center"
            android:layout_height="match_parent" />

        <View
            android:layout_width="1dip"
            android:background="#dddddd"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="0dip"
            android:text="选他中标"
            android:id="@+id/chooseSell"
            android:textColor="@color/main_blue"
            android:textSize="16dip"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>